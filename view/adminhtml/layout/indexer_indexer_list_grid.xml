<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.indexer.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column"
                   name="adminhtml.indexer.grid.columnSet.indexer_mode_locked"
                   after="adminhtml.indexer.grid.columnSet.indexer_mode">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Mode Locked</argument>
                    <argument name="renderer" xsi:type="string">
                        Element119\IndexerDeployConfig\Block\Backend\Grid\Column\Renderer\ModeLocked
                    </argument>
                    <argument name="sortable" xsi:type="string">0</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
